<div class="user">
  <img src="{{avatar_url}}" alt="{{name}}" class="avatar"/>
  <h2>{{name}}</h2>
  <h3>{{login}}</h3>

  <ul class="info">
    <li class="info-detail">
      <span class="octicon octicon-location"></span>
      <span>{{location}}</span>
    </li>
    <li class="info-detail">
      <span class="octicon octicon-clock"></span>
      <span>Join on {{created_at}}</span>
    </li>
  </ul>

  <ul class="stats">
    <li class="stats-detail">
      <a href="{{followers_url}}">{{followers}}</a>
      <span>Followers</span>
    </li>
    <li class="stats-detail">
      <a href="{{starred_url}}">0</a>
      <span>Starred</span>
    </li>
    <li class="stats-detail">
      <a href="{{following_url}}">{{following}}</a>
      <span>Following</span>
    </li>
  </ul>

  <h3>Organizations</h3>
    <img src="{{organizations_url}}" alt="organizations"/>
</div>
